@{
    var account = ViewBag.account;
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Update Account</h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(true)
        </div>
    }

    <form method="post" class="border p-4 rounded shadow-lg bg-light">
        <input type="hidden" name="AccountId" value="@account.AccountId" />

        <!-- Account Name -->
        <div class="mb-3">
            <label class="form-label fw-bold">Account Name:</label>
            <input type="text" name="AccountName" value="@account.AccountName" class="form-control" required />
            <span class="text-danger">@Html.ValidationMessage("AccountName")</span>
        </div>

        <!-- Email -->
        <div class="mb-3">
            <label class="form-label fw-bold">Email:</label>
            <input type="email" name="AccountEmail" value="@account.AccountEmail" class="form-control" required />
            <span class="text-danger">@Html.ValidationMessage("AccountEmail")</span>
        </div>

        <!-- Role -->
        <div class="mb-3">
            <label class="form-label fw-bold">Role:</label>
            <select name="AccountRole" asp-items="ViewBag.Roles" class="form-control"></select>
            <span class="text-danger">@Html.ValidationMessage("AccountRole")</span>
        </div>

        <!-- Password -->
        <div class="mb-3">
            <label class="form-label fw-bold">Password:</label>
            <input type="password" name="AccountPassword" value="@account.AccountPassword" class="form-control" required />
            <span class="text-danger">@Html.ValidationMessage("AccountPassword")</span>
        </div>

        <!-- Buttons -->
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Update</button>
            <a href="@Url.Action("Index", "accounts")" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
