@model Category

<h2>Create New Category</h2>

<form method="post">
    <div>
        <label>Category Name:</label>
        <input type="text" asp-for="CategoryName" required />
        <span style="color: red;">@Html.ValidationMessageFor(m => m.CategoryName)</span>
    </div>

    <div>
        <label>Description:</label>
        <textarea asp-for="CategoryDesciption" rows="4" cols="50"></textarea>
        <span style="color: red;">@Html.ValidationMessageFor(m => m.CategoryDesciption)</span>
    </div>

    <div>
        <label>Parent Category:</label>
        <select asp-for="ParentCategoryId">
            <option value="">None</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.CategoryId">@category.CategoryName</option>
            }
        </select>
        <span style="color: red;">@Html.ValidationMessageFor(m => m.ParentCategoryId)</span>
    </div>

    <div>
        <label>Status:</label>
        <select asp-for="IsActive">
            <option value="true">Active</option>
            <option value="false">Inactive</option>
        </select>
    </div>

    <button type="submit">Create</button>
</form>

<a href="@Url.Action("Index", "categories")">Back to List</a>
