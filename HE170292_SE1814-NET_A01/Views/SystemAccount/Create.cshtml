@model SystemAccount

<h2>Create Account</h2>

<form method="post">
    <div>
        <label>Account Name:</label>
        <input type="text" asp-for="AccountName" required />
        <span style="color: red;">@Html.ValidationMessageFor(m => m.AccountName)</span>
    </div>

    <div>
        <label>Email:</label>
        <input type="email" asp-for="AccountEmail" required />
        <span style="color: red;">@Html.ValidationMessageFor(m => m.AccountEmail)</span>
    </div>

    <div>
        <label>Role:</label>
        <select asp-for="AccountRole">
            <option value="1">Staff</option>
            <option value="2">Lecturer</option>
            <option value="3">Admin</option>
        </select>
        <span style="color: red;">@Html.ValidationMessageFor(m => m.AccountRole)</span>
    </div>

    <div>
        <label>Password:</label>
        <input type="text" asp-for="AccountPassword" required />
        <span style="color: red;">@Html.ValidationMessageFor(m => m.AccountPassword)</span>
    </div>

    <button type="submit">Create</button>
</form>

<a href="@Url.Action("Index", "accounts")">Back to List</a>
